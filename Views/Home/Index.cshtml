@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .product-card {
        height: 100%;
    }

    .card-img-top {
        max-height: 200px; /* Kích thước tối đa cho hình ảnh */
        object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
    }

    .card-body {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-footer {
        margin-top: auto; /* Đẩy nút "Add to Cart" xuống cuối card */
    }

    .carousel-item img {
        width: 100%;
        height: 500px; /* Đặt độ cao mong muốn */
        object-fit: cover;
    }

</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Chào Mừng đến với E-Booker.</p>
</div>
<br />

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://cdn0.fahasa.com/media/magentothem/banner7/VPP_Slide_T2_840x320.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://cdn0.fahasa.com/media/magentothem/banner7/NCCAZ_T223_Slide_840x320.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://cdn0.fahasa.com/media/magentothem/banner7/NCCNhaNamT223_Slide_840x320.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br />
<h2>Sản Phẩm đang có:</h2>
<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 product-card">
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" class="card-img-top" alt="Product Image">
                        }
                        <div class="card-body">
                            <h5 class="card-title">Name Product: @Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text">Description: @Html.DisplayFor(modelItem => item.Description)</p>
                            <p class="card-text"><strong>Price: @Html.DisplayFor(modelItem => item.Price)</strong></p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary btn-block" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.ProductId">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <p>No products available.</p>
            </div>
        }
    </div>
</div>
<br />
<div><img src="https://book365.vn/upload/uf/ae1/5igdhxetrrh5t4zjtl79lq3l7dsyc819.jpg" alt="Mô tả ảnh" style="height: auto; width:1300px"></div>
